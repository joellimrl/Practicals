BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: 'Clear'
            size_hint_x: 0.25
            on_press: app.handle_clear()
        TextInput:
            id: input_number
            text: ''
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: 'Grade'
            size_hint_x: 0.25
            on_press: app.handle_grade()
        Label:
            id: output_label
            text: 'Enter your name'
            color: (1,1,0,1)